<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".GemCal">

    <EditText
        android:id="@+id/Entermaterial1"
        android:layout_width="160dp"
        android:layout_height="48dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/rounded_edittext_background"
        android:ems="10"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:hint=" Gold/Silver"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.848"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/Enterprice1"
        android:layout_width="160dp"
        android:layout_height="48dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/rounded_edittext_background"
        android:ems="10"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:hint=" 00"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.848"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Entermaterial1" />

    <EditText
        android:id="@+id/Enterweight1"
        android:layout_width="160dp"
        android:layout_height="48dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/rounded_edittext_background"
        android:ems="10"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:hint=" Grams"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.848"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Enterprice1" />

    <EditText
        android:id="@+id/Enterhours1"
        android:layout_width="160dp"
        android:layout_height="48dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/rounded_edittext_background"
        android:ems="10"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:hint=" Hours"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.848"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Enterweight1" />

    <EditText
        android:id="@+id/Enteroverhead1"
        android:layout_width="160dp"
        android:layout_height="48dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/rounded_edittext_background"
        android:ems="10"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:hint="10%"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.848"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Enterhours1" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="584dp"
        android:backgroundTint="#F1D166"
        android:fontFamily="sans-serif-medium"
        android:text="Calculate"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="160dp"
        android:layout_height="48dp"
        android:layout_marginTop="60dp"
        android:background="#000000"
        android:fontFamily="sans-serif-light"
        android:gravity="center|left"
        android:text="Enter Material:"
        android:textColor="#F1D166"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.099"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="160dp"
        android:layout_height="48dp"
        android:layout_marginTop="60dp"
        android:background="#000000"
        android:fontFamily="sans-serif-light"
        android:gravity="center|left"
        android:text="Enter Price:"
        android:textColor="#F1D166"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.099"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="160dp"
        android:layout_height="48dp"
        android:layout_marginTop="60dp"
        android:background="#000000"
        android:fontFamily="sans-serif-light"
        android:gravity="center|left"
        android:text="Enter Weight:"
        android:textColor="#F1D166"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.099"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="160dp"
        android:layout_height="48dp"
        android:layout_marginTop="60dp"
        android:background="#000000"
        android:fontFamily="sans-serif-light"
        android:gravity="center|left"
        android:text="Enter Labor:"
        android:textColor="#F1D166"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/Enterhours1"
        app:layout_constraintHorizontal_bias="0.471"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="160dp"
        android:layout_height="48dp"
        android:layout_marginTop="60dp"
        android:background="#000000"
        android:fontFamily="sans-serif-light"
        android:gravity="center|left"
        android:text="Enter Overhead:"
        android:textColor="#F1D166"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/Enteroverhead1"
        app:layout_constraintHorizontal_bias="0.471"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

</androidx.constraintlayout.widget.ConstraintLayout>