<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        tools:context=".DiamondCalE">


        <TextView
            android:id="@+id/diamondhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="#000000"
            android:fontFamily="cursive"
            android:text="Diamond"
            android:textColor="#F1D166"
            android:textSize="55sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.225"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/caratd"
            android:layout_width="160dp"
            android:layout_height="48dp"
            android:layout_marginTop="220dp"
            android:background="@drawable/rounded_edittext_background"
            android:ems="10"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:hint=" 00"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.848"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="160dp"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:background="#000000"
            android:fontFamily="sans-serif-light"
            android:gravity="center|left"
            android:text="Enter Material Purity:"
            android:textColor="#F1D166"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.099"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="124dp"
            android:backgroundTint="#F1D166"
            android:fontFamily="sans-serif-medium"
            android:text="@string/calculate"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Enteroverheadd" />

        <EditText
            android:id="@+id/Enterpriced"
            android:layout_width="160dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:autofillHints=""
            android:background="@drawable/rounded_edittext_background"
            android:ems="10"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:hint="@string/per_gram"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.848"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Entermateriald" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="160dp"
            android:layout_height="48dp"
            android:layout_marginTop="28dp"
            android:background="#000000"
            android:fontFamily="sans-serif-light"
            android:gravity="center|left"
            android:text="Enter Weight:"
            android:textColor="#F1D166"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.099"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView9" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="160dp"
            android:layout_height="48dp"
            android:layout_marginTop="48dp"
            android:background="#000000"
            android:fontFamily="sans-serif-light"
            android:gravity="center|left"
            android:text="Enter Labor Hours:"
            android:textColor="#F1D166"
            android:textSize="19sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.099"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="160dp"
            android:layout_height="48dp"
            android:layout_marginTop="44dp"
            android:background="#000000"
            android:fontFamily="sans-serif-light"
            android:gravity="center|left"
            android:text="Enter Overhead:"
            android:textColor="#F1D166"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.099"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <EditText
            android:id="@+id/caratpriced"
            android:layout_width="160dp"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/rounded_edittext_background"
            android:ems="10"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:hint=" 00"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.848"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/caratd" />

        <EditText
            android:id="@+id/Enterhoursd"
            android:layout_width="160dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:autofillHints=""
            android:background="@drawable/rounded_edittext_background"
            android:ems="10"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:hint="@string/amount"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.848"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Enterweightd" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="160dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:background="#000000"
            android:fontFamily="sans-serif-light"
            android:gravity="center|left"
            android:text="Enter Price:"
            android:textColor="#F1D166"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.099"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="160dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:background="#000000"
            android:fontFamily="sans-serif-light"
            android:gravity="center|left"
            android:text="@string/enter_material"
            android:textColor="#F1D166"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.099"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <EditText
            android:id="@+id/laborhoursd"
            android:layout_width="160dp"
            android:layout_height="48dp"
            android:layout_marginTop="48dp"
            android:background="@drawable/rounded_edittext_background"
            android:ems="10"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:hint="Hours"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.848"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Enterhoursd" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="160dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:background="#000000"
            android:fontFamily="sans-serif-light"
            android:gravity="center|left"
            android:text="Enter Labor Cost:"
            android:textColor="#F1D166"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.099"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <EditText
            android:id="@+id/Entermateriald"
            android:layout_width="160dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:autofillHints=""
            android:background="@drawable/rounded_edittext_background"
            android:ems="10"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:hint="@string/gold_silver"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.848"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/caratpriced" />

        <EditText
            android:id="@+id/Enteroverheadd"
            android:layout_width="160dp"
            android:layout_height="48dp"
            android:layout_marginTop="44dp"
            android:autofillHints=""
            android:background="@drawable/rounded_edittext_background"
            android:ems="10"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:hint="@string/_10"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.848"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/laborhoursd" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="160dp"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:background="#000000"
            android:fontFamily="sans-serif-light"
            android:gravity="center|left"
            android:text="Enter Carat Price Today:"
            android:textColor="#F1D166"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.099"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <EditText
            android:id="@+id/Enterweightd"
            android:layout_width="160dp"
            android:layout_height="48dp"
            android:layout_marginTop="28dp"
            android:autofillHints=""
            android:background="@drawable/rounded_edittext_background"
            android:ems="10"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:hint="@string/grams"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.848"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/purityd" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="160dp"
            android:layout_height="48dp"
            android:layout_marginTop="220dp"
            android:background="#000000"
            android:fontFamily="sans-serif-light"
            android:gravity="center|left"
            android:text="Enter Carat:"
            android:textColor="#F1D166"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.099"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/purityd"
            android:layout_width="160dp"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_edittext_background"
            android:ems="10"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:hint="100% to 1%"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.848"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Enterpriced" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="81dp"
            android:layout_height="62dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.912"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.017"
            app:srcCompat="@drawable/gemtable" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>